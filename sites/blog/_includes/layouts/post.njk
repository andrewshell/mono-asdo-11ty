---
layout: layouts/base.njk
---
<article class="blog-post" itemscope itemtype="{{ itemtype or 'https://schema.org/BlogPosting' }}">
<header>
	<h1 itemprop="headline">{{ title }}</h1>
</header>
<section itemprop="articleBody">
{{ content | safe }}
<p>
<time class="small" itemprop="datePublished" datetime="{{ date | htmlDateString }}" }>Published {{ date | readableDate('DDD') }}</time>
{% if isDiffDay(updated, date) %}
<br><time class="small" itemprop="dateModified" datetime="{{ updated | htmlDateString }}" }>Updated {{ updated | readableDate('DDD') }}</time>
{% endif %}
</p>
</section>
<hr>
<footer>
{% include "bio.njk" %}
</footer>
</article>

{%- if collections.posts %}
{%- set previousPost = collections.posts | getPreviousCollectionItem %}
{%- set nextPost = collections.posts | getNextCollectionItem %}
{%- if nextPost or previousPost %}
<nav class="blog-post-nav">
<ul>
{%- if previousPost %}<li><a rel="prev" href="{{ previousPost.url }}">← {{ previousPost.data.title }}</a></li>{% endif %}
{%- if nextPost %}<li><a rel="next" href="{{ nextPost.url }}">{{ nextPost.data.title }} →</a></li>{% endif %}
</ul>
</nav>
{%- endif %}
{%- endif %}
